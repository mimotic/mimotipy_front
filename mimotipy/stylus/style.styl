// normalized
@import '../../bower_components/normalize.styl/normalize.styl'
@import 'fonts.styl'

// variables colores
gris_oscuro = #333
gris_claro = #818181
rojo = #BD255B



body{
	font-family: 'Varela', sans-serif
	font-size: 16px;
}

figure
	margin 0

img
	vertical-align top

a
	text-decoration none

// buttons
.button-menu
	position absolute
	top 50%
	margin-top -10px
	left .5em
	color gris_oscuro

// oocss classes

.container
	padding 1.4rem
	font-size 0
	text-align center
.action
	color white
	margin-right .5em
	font-size 1.2em
	&:last-child
		margin-right 0
	&.gray
		color gris_claro

.actions
	position absolute
	bottom 0
	right 0
	left 0
	background rgba(black, .5)

.border-bottom
	border-bottom 1px solid gris_claro

.padding
	padding 1em

.padding-tb
	padding 1em 0
.left
	float left
.right
	float right
.progress
	margin 1em 0
	position relative
	.min
	.max
		font-size .8em
		position absolute
		top -5px
	.min
		left 0
	.max
		right 0
	.total
		height 5px
		background gris_claro
		width 75%
		border-radius 5px
		margin 0 auto
	.state
		height 5px
		background rojo
		width 30%
		border-radius 5px
	.circle
		width 10px
		height 10px
		background gris_oscuro
		border-radius 50%
		position absolute
		right 0
		top -2px

.name
	color gris_oscuro

.menu
	display none

.relative
	position relative

.author
	color gris_claro

.center-block
	margin 0 auto

.text-center
	text-align center

.text-right
	text-align right

.header
	height 3.5em

	.title
		font-size 1.1em
		text-align center
		margin 0
		line-height 3.5em

.song
	width 8rem
	display inline-block
	font-size 1rem
	margin-right 1em
	margin-bottom 1em
	text-align left

	&:nth-child(even)
		margin-right: 0

	p
		margin .5em 0

.playing
	&.small
		width 20em

@media screen and (min-width: 480px)
	.song
		&:nth-child(even)
			margin-right 1em
	.image
		img
			width 100%
			height auto
	.playing
		&.medium
			width auto

@media screen and (min-width: 1000px)
	.button-menu
		display none
	.header
		height auto
		.title
			display none
	.isotipo
		width 122px
	.logo
		padding 1.3em 0
		overflow hidden
	.wrap
		width 1000px